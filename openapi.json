{
  "openapi": "3.0.0",
  "info": {
    "title": "ISW Company Similarity API",
    "version": "1.0.0",
    "description": "Company similarity search using vector embeddings"
  },
  "servers": [
    {
      "url": "http://127.0.0.1:5000/v1",
      "description": "Development server"
    }
  ],
  "paths": {
    "/company_routes/": {
      "get": {
        "summary": "Get Companies",
        "description": "Get paginated list of companies",
        "tags": ["Companies"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "page": {
                    "type": "integer",
                    "default": 1,
                    "minimum": 1
                  },
                  "page_size": {
                    "type": "integer",
                    "default": 10,
                    "minimum": 1,
                    "maximum": 100
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CompanyListResponse"
                }
              }
            }
          }
        }
      }
    },
    "/company_routes/{cik}": {
      "get": {
        "summary": "Get Company by CIK",
        "description": "Get detailed information for a specific company",
        "tags": ["Companies"],
        "parameters": [
          {
            "name": "cik",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            },
            "description": "Central Index Key (CIK) of the company"
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CompanyResponse"
                }
              }
            }
          }
        }
      }
    },
    "/company_routes/{cik}/similar": {
      "get": {
        "summary": "Find Similar Companies",
        "description": "Find companies similar to target using vector embeddings",
        "tags": ["Companies", "Vector Search"],
        "parameters": [
          {
            "name": "cik",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/SimilaritySearchRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SimilarCompaniesResponse"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Company": {
        "type": "object",
        "properties": {
          "id": {"type": "integer"},
          "cik": {"type": "integer"},
          "company_name": {"type": "string"},
          "description": {"type": "string"},
          "total_revenue": {"type": "number"},
          "norm_tot_rev": {"type": "integer"},
          "cluster": {"type": "integer"},
          "leiden_community": {"type": "integer"}
        }
      },
      "CompanyListResponse": {
        "type": "object",
        "properties": {
          "data": {
            "type": "object",
            "properties": {
              "companies": {
                "type": "array",
                "items": {"$ref": "#/components/schemas/Company"}
              },
              "total_pages": {"type": "integer"},
              "total_count": {"type": "integer"},
              "page": {"type": "integer"},
              "page_size": {"type": "integer"}
            }
          },
          "status": {"type": "integer"}
        }
      },
      "CompanyResponse": {
        "type": "object",
        "properties": {
          "data": {"$ref": "#/components/schemas/Company"},
          "status": {"type": "integer"}
        }
      },
      "SimilaritySearchRequest": {
        "type": "object",
        "properties": {
          "similarity_threshold": {
            "type": "number",
            "default": 0.7,
            "minimum": 0,
            "maximum": 1
          },
          "max_results": {
            "type": "integer",
            "default": 10,
            "minimum": 1,
            "maximum": 100
          },
          "filter_community": {
            "type": "boolean",
            "default": true
          }
        }
      },
      "SimilarCompaniesResponse": {
        "type": "object",
        "properties": {
          "data": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "company": {"$ref": "#/components/schemas/Company"},
                "similarity": {"type": "number"}
              }
            }
          },
          "status": {"type": "integer"}
        }
      }
    }
  }
}
